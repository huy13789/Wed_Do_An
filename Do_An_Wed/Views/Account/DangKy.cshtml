@model Do_An_Wed.Models.KHACHHANG

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng ký tài khoản cho khách hàng </h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    <a>Tên Tài Khoản</a>
    <span class="text-danger">
        @ViewData["LoiCountTK"]
        @ViewData["LoiTrungTK"]
    </span>
    <div class="col-md-10">
        @Html.EditorFor(model => model.tentk, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.tentk, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <a>Mật Khẩu</a>
        <span class="text-danger">
            @ViewData["LoiCountMK"]
        </span>
        <div class="col-md-10" for="form2Example17">
            <input type="password" name="MatKhau" class="form-control form-control-lg" id="floatingPassword" placeholder="vd:abc123">
            <label for="floatingInput"></label>
        </div>
    </div>

    <div class="form-group">
        <a>Nhập lai mật khẩu</a>
        <span class="text-danger">
            @ViewData["Loi4"]
            @ViewData["LoiTrungMK"]
        </span>
        <div class="col-md-10" for="form2Example17">
            <input type="password" name="MatKhau2" class="form-control form-control-lg" id="floatingPassword" placeholder="vd:abc123">
            <label for="floatingInput"></label>
        </div>
    </div>

    <div class="form-group">
        <a>Họ tên khách hàng</a>
        <span class="text-danger">
            @ViewData["Loi1"]
        </span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>Địa chỉ</a>
        <span class="text-danger">
            @ViewData["Loi5"]
        </span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiachiKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>Email</a>
        <span class="text-danger">
            @ViewData["Loi6"]
        </span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EmailKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailKH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>Số điện thoại</a>
        <span class="text-danger">
            @ViewData["Loi7"]
        </span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienthoaiKh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienthoaiKh, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
