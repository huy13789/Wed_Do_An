@model Do_An_Wed.Models.KHACHHANG

@{
    ViewBag.Title = "Chitietkh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 card border rounded-4">
            <h2 class="text-center">Chi tiết khách hàng</h2>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Họ tên:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>
                <dt class="col-sm-3">Tên tài khoản:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.tentk)</dd>

                <dt class="col-sm-3">số điện thoại:</dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.DienthoaiKh) </dd>
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmailKH)</dd>
                <dt class="col-sm-3">Địa chỉ:</dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.DiachiKH) </dd>
                <dt class="col-sm-3">quyền:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PHANQUYEN.TenQuyen)</dd>

            </dl>
            <div class="text-center">
                @Html.ActionLink("Back to page", "QLKhachhang", null, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Edit", "Suakh", new { id = Model.MaKH }, new { @class = "btn btn-danger btn-xs" })
            </div>
        </div>
    </div>
</div>

<style>
    dt {
        font-weight: bold;
    }

    hr {
        border-color: #999999;
    }
</style>
