@using PagedList.Mvc;
@using Do_An_Wed.Models
@model PagedList.PagedList<Do_An_Wed.Models.SANPHAM>
@{
    ViewBag.Title = "QLSanpham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}
<link href="~/Content/Admin/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
<h2 style="font-weight: bold; margin-bottom: 35px;margin-top:30px">DANH SÁCH THƯƠNG HIỆU</h2>

<div class="x_panel">
    <div class="x_title">
        <a href="@Url.Action("Themmoisp", "Sanpham")" class="btn btn-default" style="margin-bottom: 8px; color: white; background-color: rebeccapurple; ">
            <i class="fa-pie-circle"></i> Thêm sản phẩm
        </a>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <p></p>
        <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th>
                            <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" id="check-all" class="flat" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                        </th>
                        <th class="column-title">Tên sản phẩm </th>
                        <th class="column-title">Hình ảnh </th>
                        <th class="column-title"> Số lượng </th>
                        <th class="column-title">Ngày cập nhật  </th>
                        <th class="column-title">giá </th>
                        <th class="column-title">Thương hiệu </th>
                        <th class="column-title">Danh mục </th>
                        <th class="column-title">Mô tả </th>
                        <th class="column-title no-link last">
                            <span class="nobr">Chức năng</span>
                        </th>
                        <th class="bulk-actions" colspan="7">
                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="odd pointer">
                            <td class="a-center ">
                                <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" class="flat" name="table_records" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                <img src="~/Content/img/@item.HinhanhSP" style="width:120px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoluongSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaycapnhatSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.THUONGHIEU.TenTH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DANHMUC.TenDM)
                            </td>
                            <td>
                                @Html.Raw(item.MotaSP)
                                @*@Truncate(item.MotaSP, 50)*@
                            </td>
                            <td>
                                <a href="@Url.Action("Chitietsp","Sanpham",new { id = item.MaSP})" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                <a href="@Url.Action("Suasp","Sanpham",new { id = item.MaSP})" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                <a href="@Url.Action("Xoasp","Sanpham",new { id = item.MaSP})" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("QLKhachhang", new { page = page }), new PagedListRenderOptions { LiElementClasses = new string[] { "page-item btn btn-sm btn-primary mx-1" } })
</div>


