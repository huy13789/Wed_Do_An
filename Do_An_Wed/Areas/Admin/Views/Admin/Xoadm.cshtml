@model Do_An_Wed.Models.DANHMUC

@{
    ViewBag.Title = "Xoadm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">BẠN CÓ CHẮC MUỐN XÓA DANH MỤC DƯỚI ĐÂY?</h2>
            <hr />
            <dl class="row" @*style="margin-left: 110px"*@>
