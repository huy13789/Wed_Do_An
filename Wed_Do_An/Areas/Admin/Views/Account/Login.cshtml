@model Wed_Do_An.Models.KHACHHANG

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Use a local account to log in.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        @Html.LabelFor(m => m.tentk, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.tentk, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.tentk, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.mk, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.mk, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.mk, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Log in" class="btn btn-outline-dark" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
